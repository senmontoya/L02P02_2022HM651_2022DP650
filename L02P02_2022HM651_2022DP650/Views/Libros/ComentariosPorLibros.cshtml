@model IEnumerable<L02P02_2022HM651_2022DP650.Models.Libros>
@{
    ViewData["Title"] = "Libros por Autor";
    var autorNombre = ViewContext.HttpContext.Session.GetString("nombreAutorSeleccionado");
}

<div class="bg-dark text-white p-4 text-center">
    <img src="~/img/logo.png" alt="Logo" class="mb-2" style="width: 50px;" />
    <h2>Comentarios por Libros</h2>
    <p class="small">
        Seleccione el autor -> Seleccione el Libro -> Se muestran los comentarios existentes -> Adicione un nuevo comentario
    </p>
</div>

<div class="container mt-4">
    <!-- Progress bar steps -->
    <div class="d-flex justify-content-between align-items-center position-relative mb-5">
        <!-- Progress line -->
        <div class="position-absolute" style="height: 2px; background-color: #ddd; width: 100%; z-index: 1;"></div>

        <!-- Step 1: Autores - Completed -->
        <div class="text-center position-relative" style="z-index: 2;">
            <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto bg-secondary text-white"
                 style="width: 30px; height: 30px;">
                1
            </div>
            <span class="d-block mt-2 small">AUTORES</span>
        </div>

        <!-- Step 2: Libros - Current -->
        <div class="text-center position-relative" style="z-index: 2;">
            <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto bg-success text-white"
                 style="width: 30px; height: 30px;">
                2
            </div>
            <span class="d-block mt-2 small text-success">LIBROS</span>
        </div>

        <!-- Step 3: Comentarios existentes - Upcoming -->
        <div class="text-center position-relative" style="z-index: 2;">
            <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto bg-light text-dark"
                 style="width: 30px; height: 30px;">
                3
            </div>
            <span class="d-block mt-2 small">COMENTARIOS EXISTENTES</span>
        </div>

        <!-- Step 4: Nuevo comentario - Upcoming -->
        <div class="text-center position-relative" style="z-index: 2;">
            <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto bg-light text-dark"
                 style="width: 30px; height: 30px;">
                4
            </div>
            <span class="d-block mt-2 small">NUEVO COMENTARIO</span>
        </div>
    </div>

    <!-- Autor section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <div class="text-primary">Autor:</div>
        </div>
        <div class="card-body">
            <h5>@autorNombre</h5>
        </div>
    </div>

    <!-- Libros section -->
    <div class="card">
        <div class="card-header bg-light">
            <div class="text-primary">Seleccione el Libro del autor</div>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                @foreach (var libro in Model)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@libro.nombre</span>
                        @Html.ActionLink("Seleccionar", "Index", "Libros",
                                 new { idLibro = libro.Id },
                                 new { @class = "btn btn-success" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<footer class="bg-dark text-white text-center p-3 mt-5">
    <p class="mb-0">YYYY-DD-NN - NOMBRE DEL ALUMNO UNO</p>
    <p class="mb-0">YYYY-DD-NN - NOMBRE DEL ALUMNO DOS</p>
</footer>